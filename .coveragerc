[run]

branch = True

cover_pylib = False

omit =
    # init files
    __init__.py
    # configurations generated by django
    */*/mysite/*
    # migration data
    */*/migrations/*
    # test files itself
    */*/tests/*
    # anything in the user's local dir
    */local/*
    # admin configurations
    admin.py
    # app configurations
    apps.py

include =
    # include the main app files
    manager/*
    # include auth app files
    auth/*

[report]
# dont test __str__ and __repr__ methods
exclude_lines =
    def __str__
    def __repr__